<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- General Theme -->
    <style name="Theme.ENHANCe" parent="Theme.Material3.DayNight">
        <!-- Primary brand colour -->
        <item name="colorPrimary">@color/theme_primary_dark</item>
        <item name="colorPrimaryVariant">@color/theme_primary_variant_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colour -->
        <item name="colorSecondary">@color/theme_secondary_dark</item>
        <item name="colorSecondaryVariant">@color/theme_secondary_variant_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar colour -->
        <item name="android:statusBarColor">@color/theme_status_bar_dark</item>
    </style>

    <!-- Remove action bar from Activity -->
    <style name="Theme.ENHANCe.NoActionBar" parent="Theme.ENHANCe">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Settings Menu Colours -->
    <color name="setting_background">#1c1b20</color>
    <color name="setting_option_background">#27282d</color>

    <!-- Patient Profile/Verify Scan Background -->
    <color name="profile_background">#27282d</color>
    <color name="text_color">#ffffff</color>
    <color name="text_black_white">#d9d9d6</color>

    <!-- Scan Menu -->
    <color name="warning_text_color">#FF6F6F</color>

    <!-- Orange Button color -->
    <color name="primary_button_color">#27282d</color> <!-- Affects HistoryItems also -->
    <color name="primary_button_color_light">@color/theme_primary_variant_dark</color>
</resources>